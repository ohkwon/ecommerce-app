<div class="row">

  <div class="col-md-3"></div>

  <div class="col-md-6">
    <h1>Login</h1>
    <%= form_tag '/login', method: :post do %>
      <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email, "", class: "form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :password %>
        <%= text_field_tag :password, "", type: "password", class: "form-control"%>
      </div>
      <div>
        <%= submit_tag "Login" %>
      </div>
    <% end %>
  </div>
</div>