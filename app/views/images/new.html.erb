<div class="row">

  <div class="col-md-3"></div>

  <div class="col-md-6">
    <h1>Add Image</h1>
    <%= form_tag '/images', method: :post do %>
      <div class="form-group">
        <%= label_tag :name %>
        <%= text_field_tag :name, "", class: "form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :url %>
        <%= text_field_tag :url, "", class: "form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :product_id %>
        <%= text_field_tag :product_id, "#{params[:product_id]}", class: "form-control"%>
      </div>
      <div>
        <%= submit_tag "Add Image" %>
      </div>
    <% end %>
  </div>
</div>