<div class="row">

  <div class="col-md-3"></div>

  <div class="col-md-6">
    <h1>New Product</h1>
    <%= form_tag '/products', method: :post do %>
      <% @number_of_consoles.times do %>
        <div class="form-group">
          <% @counter += 1 %>
          <%= collection_select :console"#{@counter}", :console_id, Console.all, :id, :name %>
        </div>
      <% end %>
      <div>
        <%= submit_tag "Create Product" %>
      </div>
    <% end %>
  </div>
</div>