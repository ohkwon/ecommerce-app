<% if @user && @user.errors.any? %>

  <h2 style="color:red">Errors</h2>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li style="color:red"><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="row">

  <div class="col-md-3"></div>

  <div class="col-md-6">
    <h1>New User</h1>
    <%= form_tag '/users', method: :post do %>
      <div class="form-group">
        <%= label_tag :name %>
        <%= text_field_tag :name, @user.name, class: "form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email, @user.email, class: "form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :password %>
        <%= text_field_tag :password, "", type: "password", class: "form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :password_confirmation %>
        <%= text_field_tag :password_confirmation, "", type: "password", class: "form-control"%>
      </div>
      <div>
        <%= submit_tag "Create Account" %>
      </div>
    <% end %>
  </div>
</div>