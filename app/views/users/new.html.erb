<div class="row">

  <div class="col-md-3"></div>

  <div class="col-md-6">
    <h1>New User</h1>
    <%= form_tag '/users', method: :post do %>
      <div class="form-group">
        <%= label_tag :name %>
        <%= text_field_tag :name, "", class: "form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email, "", class: "form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :password %>
        <%= text_field_tag :password, "", type: "password", class: "form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :password_confirmation %>
        <%= text_field_tag :password_confirmation, "", type: "password", class: "form-control"%>
      </div>
      <div>
        <%= submit_tag "Create Account" %>
      </div>
    <% end %>
  </div>
</div>