<div class="row">

  <div class="col-md-3"></div>

  <div class="col-md-6">
    <h1>New Product</h1>
    <%= form_tag '/products', method: :post do %>
      <div class="form-group">
        <%= label_tag :name %>
        <%= text_field_tag :name, placeholder="Name", class: "form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :price %>
        <%= text_field_tag :price, "", class: "form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :image %>
        <%= text_field_tag :image, "", class: "form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :developer %>
        <%= text_field_tag :developer, "", class: "form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :description %>
        <%= text_field_tag :description, "", class: "form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :console %>
        <%= text_field_tag :console, "", class: "form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :rating %>
        <%= text_field_tag :rating, "", class: "form-control"%>
      </div>
      <div>
        <%= submit_tag "Create Product" %>
      </div>
    <% end %>
  </div>
</div>