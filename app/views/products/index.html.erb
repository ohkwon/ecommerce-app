<h1>Home</h1>
<table class="table table-hover">
  <tr>
    <th>Picture</th>
    <th>Name</th>
    <th>Price</th>
    <th>Developer</th>
    <th>Description</th>
    <th>Console</th>
    <th>Rating</th>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td><img class="img_responsive" src="<%= product.image %>" style="width:100px;"></td>
      <td><strong><a href="/products/<%= product.id %>"><%= product.name %></a></strong></td>
      <td>$<%= product.price %></td>
      <td><%= product.developer %></td>
      <td><%= product.description %></td>
      <td><%= product.console %></td>
      <td><%= product.rating %></td>
      <td><%= link_to "Edit", "/products/#{product.id}/edit" %></td>
      <td><%= link_to "Delete", "/products/#{product.id}", method: :delete %></td>
    </tr>
  <% end %>
</table>