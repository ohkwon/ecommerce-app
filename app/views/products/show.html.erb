<div class="container show-container">
  <div class="container show-border-style">
    <div class="show-border-style-head">
      <h2><%= @product.name %></h2>
      <p><img class="img_responsive" src="<%= @image_cover.url %>" style="width:150px;"></p>
    </div>
    <ul>
      <% if @product.price < 2.0 %>
        <li class="red-text">Price: $<%= @product.price %></li>
      <% else %>
        <li>Price: $<%= @product.price %></li>
      <% end %>
      <ul>
        <li>Estimated Tax: $<%= @product.tax %></li>
        <li>Total with Tax: $<%= @product.total %></li>
      </ul>
      <li>Developer: <%= @product.developer %></li>
      <li>Description: <%= @product.description %></li>
      <li>Supplier: <%= @product.supplier.name %></li>
      <li>Consoles: <%= @product.console %></li>
      <li>Rating: <%= @product.rating %></li>
      <li>Screenshots: 
        <% @screenshots.each do |screenshot| %>
          <p><a href="<%= screenshot.url unless screenshot.nil? %>"><img class="img_responsive" src="<%= screenshot.url unless screenshot.nil? %>" style="max-height:400px"></a></p>
        <% end %>
      </li>
    </ul>
    <div class="row">

      <div class="col-md-3"></div>

        <div class="col-md-6">
          <h1>Create an Order</h1>
          <%= form_tag '/orders', method: :post do %>
<!--             <div class="form-group">
              <%= collection_select :product, :id, Product.all, :id, :name %>
            </div> -->
            <div class="form-group">
              <%= hidden_field_tag :product_id, "#{@product.id}"%>
            </div>
            <div class="form-group">
              <%= label_tag :quantity %>
              <%= text_field_tag :quantity, "", class: "form-control"%>
            </div>
            <div>
              <%= submit_tag "Buy now!" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

<h4><a href="/products/<%="#{@id}"%>/edit">Update Product</a></h4>
<h4><a href="/images/new?product_id=<%= @product.id %>">Add Image</a></h4>