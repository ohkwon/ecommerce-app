<h1>Edit Product</h1>
<%= form_tag "/products/#{@id}", method: :patch do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  <div>
    <%= label_tag :price %>
    <%= text_field_tag :price %>
  </div>
  <div>
    <%= label_tag :image %>
    <%= text_field_tag :image %>
  </div>
  <div>
    <%= label_tag :developer %>
    <%= text_field_tag :developer %>
  </div>
  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description %>
  </div>
  <div>
    <%= label_tag :console %>
    <%= text_field_tag :console %>
  </div>
  <div>
    <%= label_tag :rating %>
    <%= text_field_tag :rating %>
  </div>
  <div>
    <%= submit_tag "Update Product" %>
  </div>
<% end %>