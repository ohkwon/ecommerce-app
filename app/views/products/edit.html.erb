<div class="row">

  <div class="col-md-3"></div>

  <div class="col-md-6">
    <h1>Update Product</h1>
    <%= form_tag "/products/#{@id}", method: :patch do %>
      <div class="form-group">
        <%= label_tag :name %>
        <%= text_field_tag :name, @product.name, class: "form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :price %>
        <%= text_field_tag :price, @product.price, class: "form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :image %>
        <%= text_field_tag :image, @product.images.find_by(name: "Cover").url, class: "form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :image_name %>
        <%= text_field_tag :image_name, @product.images.find_by(name: "Cover").name, class: "form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :developer %>
        <%= text_field_tag :developer, @product.developer, class: "form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :description %>
        <%= text_field_tag :description, @product.description, class: "form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :console %>
        <%= text_field_tag :console, @product.console, class: "form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :rating %>
        <%= text_field_tag :rating, @product.rating, class: "form-control"%>
      <div class="form-group">
        <%= label_tag :inventory %>
        <%= text_field_tag :inventory, @product.inventory, class: "form-control"%>
      </div>
      <div class="form-group">
        <%= collection_select :supplier, :supplier_id, Supplier.all, :id, :name %>
      </div>
      <div>
        <%= submit_tag "Update Product" %>
      </div>
    <% end %>

    <h3>Delete Product</h3>
    <%= form_tag "/products/#{@id}", method: :delete do %>
      <div>
        <%= submit_tag "Delete Product" %>
      </div>
    <% end %>
  </div>
</div>